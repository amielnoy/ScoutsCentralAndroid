<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="12dp"
  app:cardCornerRadius="16dp"
  app:cardElevation="2dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/activity_image"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:scaleType="centerCrop"
      android:src="@drawable/activity_placeholder"
      app:shapeAppearanceOverlay="@style/RoundedImageView"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
      android:id="@+id/activity_menu"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@android:drawable/ic_menu_more"
      app:layout_constraintTop_toTopOf="@id/activity_image"
      app:layout_constraintStart_toStartOf="@id/activity_image"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      app:tint="@android:color/white"
      android:contentDescription="תפריט" />

    <TextView
      android:id="@+id/activity_card_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textSize="18sp"
      android:textColor="@color/text_primary"
      android:layout_marginTop="12dp"
      app:layout_constraintTop_toBottomOf="@id/activity_image"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:id="@+id/activity_card_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textColor="@color/primary"
      android:textSize="12sp"
      android:layout_marginTop="4dp"
      app:layout_constraintTop_toBottomOf="@id/activity_card_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:id="@+id/activity_card_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textColor="@color/text_secondary"
      android:textSize="12sp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@id/activity_card_date"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/activity_attendance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="מעקב נוכחות"
      android:layout_marginTop="12dp"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      app:layout_constraintTop_toBottomOf="@id/activity_card_description"
      app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
