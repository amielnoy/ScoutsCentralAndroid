<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="16dp"
  android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/member_image_input"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_placeholder" />

    <Button
        android:id="@+id/btn_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="צלם תמונה"
        android:layout_marginBottom="12dp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/pupils_name"
    android:textColor="@color/text_secondary" />

  <EditText
    android:id="@+id/member_name_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="שכבה"
    android:textColor="@color/text_secondary"
    android:layout_marginTop="12dp" />

  <Spinner
    android:id="@+id/member_level_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="איש קשר"
    android:textColor="@color/text_secondary"
    android:layout_marginTop="12dp" />

  <EditText
    android:id="@+id/member_contact_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress" />
</LinearLayout>
