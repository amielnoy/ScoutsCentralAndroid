<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layoutDirection="rtl">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="צור סיכום"
      android:textStyle="bold"
      android:textSize="18sp"
      android:textColor="@color/text_primary" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="בחר/י חניך/ה וטווח תאריכים כדי ליצור סיכום השתתפות."
      android:textColor="@color/text_secondary"
      android:textSize="12sp"
      android:layout_marginTop="4dp" />

    <Spinner
      android:id="@+id/report_scout_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp" />

    <EditText
      android:id="@+id/report_start_date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="תאריך התחלה (YYYY-MM-DD)"
      android:layout_marginTop="12dp" />

    <EditText
      android:id="@+id/report_end_date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="תאריך סיום (YYYY-MM-DD)"
      android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/report_generate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="צור סיכום"
      android:layout_marginTop="12dp"
      style="@style/Widget.MaterialComponents.Button" />

    <TextView
      android:id="@+id/report_result"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="הסיכום שתיצור יוצג כאן."
      android:textColor="@color/text_secondary"
      android:layout_marginTop="16dp" />
  </LinearLayout>
</ScrollView>
