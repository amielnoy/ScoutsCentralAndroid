<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp"
  android:background="#F8F9FA"
  android:layoutDirection="rtl">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/reports_and_data"
    android:textStyle="bold"
    android:textSize="24sp"
    android:textColor="#1A1C1E" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/view_scouts_clan_activities"
    android:textColor="#44474E"
    android:textSize="14sp"
    android:layout_marginTop="4dp" />

  <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <com.google.android.material.tabs.TabLayout
      android:id="@+id/reports_tabs"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      app:tabMode="fixed"
      app:tabGravity="fill"
      app:tabIndicatorHeight="3dp"
      app:tabIndicatorFullWidth="true"
      app:tabSelectedTextColor="@color/primary"
      app:tabTextColor="#74777F"
      app:tabRippleColor="@null"
      android:background="@android:color/white" />
  </com.google.android.material.card.MaterialCardView>

  <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/reports_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white" />
  </com.google.android.material.card.MaterialCardView>

</LinearLayout>
